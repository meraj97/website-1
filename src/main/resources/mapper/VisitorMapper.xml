<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wgn.framework.web.mapper.VisitorMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.wgn.framework.web.entity.VisitorEntity">
    <result column="id" property="id" />
        <result column="lk" property="lk" />
        <result column="ip" property="ip" />
        <result column="ag" property="ag" />
        <result column="tm" property="tm" />
        <result column="us" property="us" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        lk, ip, ag, tm, us
    </sql>

    <!--    获取首页信息-->
    <select id="getHomeInfo" resultType="cn.wgn.website.dto.HomeInfo">
        SELECT
            t.headimg,
            t.username,
            t.realname,
            (
                SELECT
                    t2.role_name
                FROM
                    wu_role t2
                WHERE
                    t2.id = t.roleid
            ) AS role,
            t.login_time AS loginTime,
            (
                SELECT
                    t3.ip
                FROM
                    wu_visitor t3
                WHERE
                    LEFT (t3.us, LENGTH(t.id) + 1) = t.id + ':'
                ORDER BY
                    t3.id DESC
                LIMIT 1
            ) AS lastIp,
            (
                SELECT
                    count(1)
                FROM
                    wu_visitor t4
                WHERE
                    TO_DAYS(NOW()) - TO_DAYS(t4.tm) &lt; 1
            ) AS todayNum,
            (
                SELECT
                    count(1)
                FROM
                    wu_visitor
            ) AS allNum,
            NULL AS weekChart,
            NULL AS lastAdd
        FROM
            wu_user AS t
        WHERE
            t.id = #{uid}
    </select>
</mapper>
